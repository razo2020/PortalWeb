{% extends 'inc/tablas.html.twig' %}

{% block title %}Mantenimiento de Materiales{% endblock %}

{% block body %}
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Tablero</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('mostrar_empresa',{ id: almacen.empresa.ruc }) }}">Empresa</a>
        </li>
        <li class="breadcrumb-item active">Materiales</li>
    </ol>

    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Materiales
            <a href="{{ path('nuevo_material', { id: almacen.empresa.ruc }) }}"> <span class="small float-right">Agregar</span> </a>
        </div>
        <div class="card-body">
            {% if ubicaciones %}
                <div class="table-responsive">
                    <table class="table table-striped table-middle-aligned"  id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>ID Material</th>
                            <th>Nombre</th>
                            <th>Ubicación</th>
                            <th>UND</th>
                            <th>Stock</th>
                            <th class="text-center"><i class="fa fa-fw fa-cogs"></i>Acciones</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>ID Material</th>
                            <th>Nombre</th>
                            <th>Ubicación</th>
                            <th>UND</th>
                            <th>Stock</th>
                            <th class="text-center"><i class="fa fa-fw fa-cogs"></i>Acciones</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for ubicacion in ubicaciones %}
                            <tr>
                                {% if ubicacion.material %}
                                <td>{{ ubicacion.material.idmaterial }}</td>
                                <td>{{ ubicacion.material.nombre }}</td>
                                <td>{{ ubicacion.ubicacion }}</td>
                                <td>{{ ubicacion.stock }}</td>
                                <td>{{ ubicacion.nombre }}</td>
                                <td class="text-center">
                                    <div class="item-actions">
                                        <a href="#" class="btn btn-sm btn-secondary">
                                            <i class="fa fa-eye" aria-hidden="true"></i> ver
                                        </a>
                                        <a href="#" class="btn btn-sm btn-dark">
                                            <i class="fa fa-edit" aria-hidden="true"></i> editar
                                        </a>
                                    </div>
                                </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <p> No existe Materiales para visualizar ...</p>
            {% endif %}
        </div>

        {% if app.flashes('notice') %}
            {# you can read and display just one flash message type... #}
            {% for message in app.flashes('notice') %}
                <div class="card-footer small text-muted">
                    {{ message }}
                </div>
            {% endfor %}
        {% else %}
            <div class="card-footer small text-muted">
                Mantenimiento de Materiales ....
            </div>
        {% endif %}
    </div>

{% endblock %}
