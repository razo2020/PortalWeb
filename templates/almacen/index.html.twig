{% extends 'inc/tablas.html.twig' %}

{% block title %}Mantenimiento de Almacenes{% endblock %}

{% block body %}

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Tablero</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('mostrar_empresa',{ id: idempresa }) }}">Empresa</a>
        </li>
        <li class="breadcrumb-item active">Almacenes</li>
    </ol>

    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Almacenes <a href="{{ path('registrar_almacen',{rucEmpresa: idempresa}) }}"> <span class="small float-right">Agregar</span> </a>
        </div>
        <div class="card-body">
            {% if almacenes %}
                <table class="table table-striped table-middle-aligned"  id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>ID Almacen</th>
                        <th>Nombre</th>
                        <th class="text-center"><i class="fa fa-fw fa-cogs"></i>Acciones</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>ID Almacen</th>
                        <th>Nombre</th>
                        <th class="text-center"><i class="fa fa-fw fa-cogs"></i>Acciones</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for almacen in almacenes %}
                        <tr>
                            <td>{{ almacen.idalmacen }}</td>
                            <td>{{ almacen.nombre }}</td>
                            <td class="text-center">
                                <div class="item-actions">
                                    <a href="{{ path('lista_materiales',{idAlmacen: almacen.idalmacen}) }}" class="btn btn-sm btn-secondary">
                                        <i class="fa fa-eye" aria-hidden="true"></i> ver
                                    </a>
                                    <a href="#" class="btn btn-sm btn-dark">
                                        <i class="fa fa-edit" aria-hidden="true"></i> editar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p> No existe almacenes para visualizar ...</p>
            {% endif %}
        </div>

        {% if app.flashes('notice') %}
            {# you can read and display just one flash message type... #}
            {% for message in app.flashes('notice') %}
                <div class="card-footer small text-muted">
                    {{ message }}
                </div>
            {% endfor %}
        {% else %}
            <div class="card-footer small text-muted">
                Mantenimiento de almacenes ....
            </div>
        {% endif %}
    </div>

{% endblock %}

