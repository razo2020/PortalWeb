{% extends 'inc/tablas.html.twig' %}

{% block title %}Mantenimiento de usuarios{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Tablero</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('mostrar_empresa',{ id: empresa.ruc }) }}">Empresa</a>
            </li>
            <li class="breadcrumb-item active">Usuarios</li>
        </ol>

        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i> Usuarios <a href="{{ path('registrar_usuario',{rucEmpresa: empresa.ruc}) }}"> <span class="small float-right">Agregar</span> </a>
            </div>
            <div class="card-body">
                {% if usuarios %}
                <div class="table-responsive">
                    <table class="table table-striped table-middle-aligned"  id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>DNI</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th class="text-center"><i class="fa fa-fw fa-cogs"></i>Acciones</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>DNI</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th class="text-center"><i class="fa fa-fw fa-cogs"></i>Acciones</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for user in usuarios %}
                            <tr>
                                <td>{{ user.dni }}</td>
                                <td>{{ user.nombres }}</td>
                                <td>{{ user.apellidos }}</td>
                                <td class="text-center">
                                    <div class="item-actions">
                                        <a href="{{ path("mostrar_usuario", {id: user.id}) }}" class="btn btn-sm btn-secondary">
                                            <i class="fa fa-eye" aria-hidden="true"></i> ver
                                        </a>
                                        <a href="{{ path("editar_usuario",{id: user.id}) }}" class="btn btn-sm btn-dark">
                                            <i class="fa fa-edit" aria-hidden="true"></i> editar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                    <p> No existe usuarios para visualizar ...</p>
                {% endif %}
            </div>

            {% if app.flashes('notice') %}
                {# you can read and display just one flash message type... #}
                {% for message in app.flashes('notice') %}
                    <div class="card-footer small text-muted">
                        {{ message }}
                    </div>
                {% endfor %}
            {% else %}
                <div class="card-footer small text-muted">
                    Mantenimiento de usuarios ....
                </div>
            {% endif %}
        </div>

    </div>

{% endblock %}
