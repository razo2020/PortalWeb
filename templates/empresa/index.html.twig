{% extends 'base.html.twig' %}

{% block title %}Mantenimiento de Empresas{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Page level plugin CSS-->
    <link href="/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Tablero</a>
            </li>
            <li class="breadcrumb-item active">Empresas</li>
        </ol>
    {% if empresas %}
            <!-- Example DataTables Card-->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-table"></i> Empresas <a href="{{ path('nueva_empresa') }}"> <span class="small float-right">Agregar</span> </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-middle-aligned"  id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>RUC</th>
                                <th>Razón Social</th>
                                <th class="text-center"><i class="fa fa-fw fa-cogs"></i>Acciones</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>RUC</th>
                                <th>Razón Social</th>
                                <th class="text-center"><i class="fa fa-fw fa-cogs"></i>Acciones</th>
                            </tr>
                            </tfoot>
                            <tbody>
                            {% for empresa in empresas %}
                                <tr>
                                    <td>{{ empresa.ruc }}</td>
                                    <td>{{ empresa.RazonSocial }}</td>
                                    <td class="text-center">
                                        <div class="item-actions">
                                            <a href="{{ path('mostrar_empresa',{ id: empresa.ruc }) }}" class="btn btn-sm btn-secondary">
                                                <i class="fa fa-eye" aria-hidden="true"></i> ver
                                            </a>
                                            <a href="{{ path('editar_empresa',{ id: empresa.ruc }) }}" class="btn btn-sm btn-dark">
                                                <i class="fa fa-edit" aria-hidden="true"></i> editar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                {% if app.flashes('notice') %}
                    {# you can read and display just one flash message type... #}
                    {% for message in app.flashes('notice') %}
                        <div class="card-footer small text-muted">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="card-footer small text-muted">
                        Mantenimiento de empresas ....
                    </div>
                {% endif %}
            </div>
        {% else %}
            <p> No existe empresas para visualizar ...</p>
        {% endif %}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Page level plugin JavaScript-->
    <script src="/vendor/datatables/jquery.dataTables.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.js"></script>
    <!-- Custom scripts for this page-->
    <script src="/js/sb-admin-datatables.js"></script>
{% endblock %}
