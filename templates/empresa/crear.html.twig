{% extends 'base.html.twig' %}

{% block title %}Mantenimiento de Empresa{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/user/{id}">Tablero</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/empresa">Empresas</a>
            </li>
            <li class="breadcrumb-item active">Empresa</li>
        </ol>
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">
                <h5>
                    <p class="text-center">Empresa Nueva</p>
                </h5>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="form-row">
                    <div class="col-md-3">
                {{ form_row(form.ruc) }}
                    </div>
                    <div class="col-md-9">
                {{ form_row(form.razonSocial) }}
                    </div>
                </div>
                {{ form_row(form.direccion) }}
                <div class="form-row">
                    <div class="col-md-6">
                        {{ form_row(form.telefono1) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.telefono2) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-6">
                        {{ form_row(form.rubro) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.tipo) }}
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save" aria-hidden="true"></i> Guardar
                </button>
                {{ form_widget(form.saveAndCreateNew, {label: 'Guardar y crear otro', attr: {class: 'btn btn-primary'}}) }}
                <a href="{{ path('lista_empresas') }}" class="btn btn-link">
                    <i class="fa fa-list-alt" aria-hidden="true"></i> Volver al listado de empresas
                </a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}